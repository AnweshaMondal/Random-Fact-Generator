{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Random Fact Generator API",
			"type": "shell",
			"command": "npm run dev",
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/random-fact-generator"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*Server is starting.*$",
						"endsPattern": "^.*Server is running.*$"
					}
				}
			],
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Build Random Fact Generator API",
			"type": "shell",
			"command": "npm run build",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/random-fact-generator"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "Test Random Fact Generator API",
			"type": "shell",
			"command": "npm test",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}/random-fact-generator"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "Seed Database",
			"type": "shell",
			"command": "npm run seed",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/random-fact-generator"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "Health Check",
			"type": "shell",
			"command": "npm run health",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/random-fact-generator"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "Docker Build",
			"type": "shell",
			"command": "docker build -t random-fact-generator .",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/random-fact-generator"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "Docker Compose Up",
			"type": "shell",
			"command": "docker-compose up -d",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/random-fact-generator"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "Docker Compose Down",
			"type": "shell",
			"command": "docker-compose down",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/random-fact-generator"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		}
	]
}