# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/random-fact-generator
MONGODB_TEST_URI=mongodb://localhost:27017/random-fact-generator-test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# GitHub AI Models Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_AI_ENDPOINT=https://models.github.ai/inference
GITHUB_AI_MODEL=xai/grok-3

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Stripe Configuration (for billing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External APIs (backup fact sources)
EXTERNAL_FACT_API_KEY=your_external_api_key
BACKUP_FACT_SOURCE_URL=https://api.backup-facts.com

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ANALYTICS_API_KEY=your_analytics_key

# Security
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,yourdomain.com

# Performance
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=100

# AI Feature Flags
AI_FACT_GENERATION_ENABLED=true
AI_FALLBACK_ENABLED=true
AI_CONTENT_MODERATION_ENABLED=true